---
import Heading from '@/components/Heading.astro';
import { buttonVariants } from '@/components/ui/button';
import { Calendar, Dumbbell } from 'lucide-react';

import heroImage from '@/assets/HunterZhang.jpeg';
import { Image } from 'astro:assets';
import type { TranslatedProject, TranslatedSkill } from '../type';
import SkillsTabs from '@/components/ui/skillsTabs';

export type Props = {
  projects: Array<TranslatedProject>;
  skills: Array<TranslatedSkill>;
  heroGreeting: string;
  heroSubtitlePart1: string;
  heroSubtitlePart2: string;
  heroIntroduction: string;
  heroViewWorkButton: string;
  heroContactButton: string;
  featuredProjectsTitle: string;
  featuredProjectsDescription: string;
  mySkillsTitle: string;
  mySkillsDescription: string;
  projectPreviewCtaText: string;
  acmAwardUrl?: string;
  fundingUrl?: string;
  stanfordFoundersUrl?: string;
  mediaCoverageUrl?: string;
};

const {
  skills,
  projects,
  heroGreeting,
  heroSubtitlePart1,
  heroSubtitlePart2,
  heroIntroduction,
  heroViewWorkButton,
  heroContactButton,
  featuredProjectsTitle,
  featuredProjectsDescription,
  mySkillsTitle,
  mySkillsDescription,
  projectPreviewCtaText,
  acmAwardUrl,
  fundingUrl,
  stanfordFoundersUrl,
  mediaCoverageUrl,
} = Astro.props;

console.log('+++++', skills, 'skills');
---

<section class="py-12 md:py-16">
  <div class="grid md:grid-cols-2 gap-12 items-center justify-between">
    {/* Hero Text Column */}
    <div class="text-center md:text-left">
      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-4"
      >
        <!-- {heroGreeting} -->
        Hi, I am Hunter Zhang
      </h1>
      <p class="text-2xl md:text-2xl font-medium text-muted-foreground mb-10">
        <!-- <span>{heroSubtitlePart1}</span>
        <span class="text-primary"> | </span>
        <span>{heroSubtitlePart2}</span> -->
        <span>Full-Stack ML Product Engineer</span>
        <span class="text-primary"> | </span>
        <span>Designer</span>
        <span class="text-primary"> | </span>
        <span>Manager</span>
      </p>
      <!-- <p class="text-lg text-muted-foreground mb-8">
        {heroIntroduction}
      </p> -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start"
      >
        <a
          href="/projects"
          class={buttonVariants({ variant: 'default', size: 'lg' })}
        >
          <Dumbbell className="mr-2 size-4" />
          <!-- {heroViewWorkButton} -->
          View My Work
        </a>
        <a
          href={'/contact'}
          class={buttonVariants({ variant: 'outline', size: 'lg' })}
        >
          <Calendar className="mr-2 size-4" />
          <!-- {heroContactButton} -->
          Get in Touch
        </a>
      </div>
    </div>

    {/* Hero Image (Placeholder for now) */}
    <div class="md:text-center">
      <div
        class="md:w-[600px] w-full h-92 bg-muted rounded-lg shadow-xl overflow-hidden"
      >
        <Image
          src={heroImage}
          alt={'User profile image'}
          width={600}
          height={368}
          densities={[1, 1.5, 2]}
          quality="high"
          class="h-full w-full object-cover"
          style="object-position: center 28%;"
        />
      </div>
    </div>
  </div>
</section>

{/* Achievements Section */}
<section class="py-12 md:py-16 bg-muted/20 dark:bg-muted/10">
  <div class="container mx-auto px-4">
    <Heading
      title="Achievements & Awards"
      className="flex flex-col items-center"
    />
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <a
        href="https://www.canva.com/design/DAGXanaqNdY/XU3lxROLKIOmxCKhQfDBvw/view?utm_content=DAGXanaqNdY&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h24fbd1983b"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-background rounded-lg p-6 shadow-sm border hover:shadow-md transition-shadow cursor-pointer block"
      >
        <div class="flex items-start gap-4">
          <div
            class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
