---
import Heading from '@/components/Heading.astro';
import ExperienceCard from '../components/ExperienceCard.astro';
import SkillBadge from '../components/SkillBadge.astro';
import { getExperiences, getSkillCategories } from '../service';
import type { SkillCategory } from '../type';

const experiences = getExperiences();
const skillCategories = getSkillCategories();
---

<div class="py-12 md:py-16">
  <div class="max-w-4xl mx-auto">
    <Heading
      title="Experience"
      description="My professional journey and technical expertise"
    />
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <section class="mb-12">
          <h2 class="text-2xl font-bold mb-6">Work Experience</h2>
          <div class="space-y-8">
            {experiences.map((experience) => (
              <ExperienceCard experience={experience} />
            ))}
          </div>
        </section>
      </div>
      
      <div class="lg:col-span-1">
        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-6">Skills</h2>
          <div class="space-y-6">
            {skillCategories.map((category) => (
              <div>
                <h3 class="text-lg font-semibold mb-3 text-foreground">{category.name}</h3>
                <div class="space-y-2">
                  {category.skills.map((skill) => (
                    <SkillBadge skill={skill} />
                  ))}
                </div>
              </div>
            ))}
          </div>
        </section>
      </div>
    </div>
  </div>
</div> 