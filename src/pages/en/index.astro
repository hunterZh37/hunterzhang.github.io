---
import BaseLayout from '@/layouts/BaseLayout.astro';
import {
  PortfolioScreen,
  getTranslatedProjects,
  getTranslatedSkills,
  type TranslatedSkill,
  type TranslatedProject,
} from '@/features/projects';

const pageTitle = 'pageTitle';
const pageDescription = 'pageDescription';

const projects: Array<TranslatedProject> = getTranslatedProjects();
const skills: Array<TranslatedSkill> = getTranslatedSkills();

const layoutProps = {
  projects,
  skills,
  heroGreeting: 'heroGreeting',
  heroSubtitlePart1: 'heroSubtitlePart1',
  heroSubtitlePart2: 'heroSubtitlePart2',
  heroIntroduction: 'heroIntroduction',
  heroViewWorkButton: 'heroViewWorkButton',
  heroContactButton: 'heroContactButton',
  imageNotAvailable: 'imageNotAvailable',
  featuredProjectsTitle: 'featuredProjectsTitle',
  featuredProjectsDescription: 'featuredProjectsDescription',
  mySkillsTitle: 'mySkillsTitle',
  mySkillsDescription: 'mySkillsDescription',
  projectPreviewCtaText: 'projectCardViewProject',
};
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <PortfolioScreen {...layoutProps} />
</BaseLayout>
