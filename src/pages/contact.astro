---
import { ContactScreen } from '@/features/contact';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageMeta = {
  title: 'pageTitle',
  description: 'pageDescription',
};

const formTranslations = {
  firstNameLabel: 'firstNameLabel',
  lastNameLabel: 'lastNameLabel',
  emailLabel: 'emailLabel',
  messageLabel: 'messageLabel',
  firstNamePlaceholder: 'firstNamePlaceholder',
  lastNamePlaceholder: 'lastNamePlaceholder',
  emailPlaceholder: 'emailPlaceholder',
  messagePlaceholder: 'messagePlaceholder',
  sendButtonLabel: 'sendButtonLabel',
  toastSuccessMessageSent: 'toastSuccessMessageSent',
  toastErrorFailedToSend: 'toastErrorFailedToSend',
  toastErrorUnexpected: 'toastErrorUnexpected',
  toastErrorDetails: 'toastErrorDetails',
  toastErrorValidationFailed: 'toastErrorValidationFailed',
};

const layoutProps = {
  mainHeadingTitle: pageMeta.title,
  mainHeadingDescription: 'description',
  formTitle: 'formTitle',
  formTranslations,
  orSeparatorText: 'orSeparatorText',
  calendarTitle: 'calendarTitle',
  calendarDescription: 'calendarDescription',
  calendarLinkLabel: 'calendarLinkLabel',
  calendarUrl: import.meta.env.PUBLIC_GOOGLE_CALENDAR_URL as string,
};
---

<BaseLayout pageTitle={pageMeta.title} pageDescription={pageMeta.description}>
  <ContactScreen {...layoutProps} />
</BaseLayout>
