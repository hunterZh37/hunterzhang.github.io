---
import Heading from '@/components/Heading.astro';
import SkillsTabs from '@/components/SkillsTabs.tsx';
import type { TranslatedSkill } from '@/features/projects/type';

export type Props = {
  skills: Array<TranslatedSkill>;
};

const { skills } = Astro.props;
---

<section id="skills" class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    <Heading
      title="Skills"
      description="What I bring to the table"
      className="flex flex-col items-center"
    />
    <SkillsTabs skills={skills} client:load />
  </div>
</section>
